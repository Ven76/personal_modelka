<%= form_for @person do |f| %>

<%= f.label :name %>
<%= f.text_field :name %>

<%= f.label :age %>
<%= f.number_field :age %>

<%= f.label :gender %>
<%= f.text_field :gender %>

<%= f.label :hair_color %>
<%= f.text_field :hair_color %>

<%= f.label :eye_color %>
<%= f.text_field :eye_color %>

<%= f.label :alive %>
<%= f.select :alive, [['Yes', true], ['No', false]] %>
<%= f.submit %>
<% end %>
